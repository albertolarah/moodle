{{!
  @template core_customfield/list

  Moodle list template.

  The purpose of this template is to render a list.

  Classes required for JS:
  * none

  Data attributes required for JS:
  * none

  Context variables required for this template:
  * attributes Array of name / value pairs.

  Example context (json):
  {
      "categories": "array",
      "singleselect" : "select"
  }
}}

<div class="row justify-content-between">
    <div class="col-auto">
        <h2>{{pagetitle}}</h2>
    </div>
    <div class="col-md-2">
        {{#addcategorybutton}}
            {{{addcategorybutton}}}
        {{/addcategorybutton}}
    </div>
</div>

{{{alert}}}

<div data-region="list-page" id="customfield_catlist" data-component="{{component}}" data-area="{{area}}" data-itemid="{{itemid}}">
    {{^categories}}
        {{{nocategories}}}
    {{/categories}}

    {{#categories}}
        <div data-category-name="{{name}}" data-category-id="{{id}}">
        <div class="row align-items-baseline justify-content-between">
            <div class="col-8">
                <a href="#" class="movecategory osep-link-icon float-left">
                    {{#pix}}i/dragdrop, core, {{#str}}move{{/str}}{{/pix}}
                </a>
                <h3>{{{name}}}</h3>
            </div>
            <div class="col-3">

                {{{addfieldmenu}}}

                <a href="{{editcategoryurl}}" data-role="editcategory" data-id="{{id}}" class="ml-2">{{#pix}}
                    t/edit, core, {{#str}} edit, moodle {{/str}} {{/pix}}</a>

                <a href="{{deletecategoryurl}}" class="confirm_delete_category" data-role="deletecategory" data-id="{{id}}">{{#pix}}
                    t/delete, core, {{#str}} delete, moodle {{/str}} {{/pix}}</a>
            </div>
        </div>
        <div>
            <table class="generaltable fullwidth fieldslist">
                <thead>
                <tr>
                    <th scope="col"></th>
                    <th scope="col" class="col-5">{{#str}} customfield, core_customfield {{/str}}</th>
                    <th scope="col" class="col-2">{{#str}} shortname, core_customfield {{/str}}</th>
                    <th scope="col" class="col-2">{{#str}} type, core_customfield {{/str}}</th>
                    <th scope="col" class="text-right">{{#str}} action, core_customfield {{/str}}</th>
                </tr>
                </thead>
                <tbody>
                {{#fields}}
                    <tr data-field-name="{{name}}" data-field-id="{{id}}"  class="field">
                        <td class="text-left">
                            <a href="#" class="movefield osep-link-icon">
                                {{#pix}}i/dragdrop, core, {{#str}}move{{/str}}{{/pix}}
                            </a>
                        </td>
                        <td class="col-5">
                            <p>{{{name}}}</p>
                        </td>
                        <td class="col-2">
                            <p>{{{shortname}}}</p>
                        </td>
                        <td class="col-2">
                            <p>{{{type}}}</p>
                        </td>
                        <td class="text-right col-5">
                            <a href="{{editfieldurl}}" data-role="editfield">{{#pix}}
                                t/edit, core, {{#str}} edit, moodle {{/str}} {{/pix}}</a>
                            <a href="{{deletefieldurl}}" class="confirm_delete" data-id="{{id}}" data-role="deletefield">{{#pix}}
                                t/delete, core, {{#str}} delete, moodle {{/str}} {{/pix}}</a>
                        </td>
                    </tr>
                {{/fields}}
                {{^fields}}
                    <tr class="nofields"><td colspan="5">{{# str }} therearenofields, core_customfield {{/ str }}</td></tr>
                {{/fields}}
                </tbody>
            </table>
        </div>
        </div>
    {{/categories}}
</div>

{{#js}}
    require(['core_customfield/form'], function(s) {
    s.init();
    });
{{/js}}

