{{!
  @template core_cfield/list

  Moodle list template.

  The purpose of this template is to render a list.

  Classes required for JS:
  * none

  Data attributes required for JS:
  * none

  Context variables required for this template:
  * attributes Array of name / value pairs.

  Example context (json):
  {
      "categories": "array",
      "singleselect" : "select"
  }
}}

{{{alert}}}

<div data-region="list-page" id="cfield_catlist" data-handler="{{{handler}}}">
    {{#categories}}
        <p>
            <h3>{{name}}</h3>
            <a href="{{{editcategoryurl}}}" data-role="editcategory" data-id="{{id}}">{{{editicon}}}</a>
            <a href="{{{deletecategoryurl}}}" class="confirm_delete_category" data-role="deletecategory" data-id="{{id}}">{{{deleteicon}}}</a>
            <a href="" class="move_up_category" data-id="{{id}}">{{{upiconcategory}}}</a>
            <a href="" class="move_down_category" data-id="{{id}}">{{{downiconcategory}}}</a>
        </p>
        <div>
            <table id="core_cfield-managefields-wrapper" class="generaltable fullwidth">
                <thead>
                <tr>
                    <th scope="col">{{customfield}}</th>
                    <th scope="col">{{type}}</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                    {{#fields}}
                        <tr data-field-name="{{{name}}}">
                            <td>
                                <p>{{name}}</p>
                            </td>
                            <td>
                                <p>{{type}}</p>
                            </td>
                            <td>
                                <a href="{{{editfieldurl}}}" >{{{editicon}}}</a>
                                <a href="{{{deletefieldurl}}}" class="confirm_delete" data-id="{{id}}">{{{deleteicon}}}</a>
                                <a href="" class="move_up_field" data-id="{{id}}">{{{upiconfield}}}</a>
                                <a href="" class="move_down_field" data-id="{{id}}">{{{downiconfield}}}</a>
                            </td>
                        </tr>
                    {{/fields}}
                </tbody>
            </table>
        </div>
        <br><br>
    {{/categories}}
</div>

{{createnewcfield}}

{{#singleselect}}
    {{>core/single_select}}
{{/singleselect}}

{{#singlebutton}}
    {{{singlebutton}}}
{{/singlebutton}}

{{#js}}
    require(['core_cfield/form'], function(s) {
    s.init();
    });
{{/js}}
